<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.remedrink">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pathway_jogging"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".app.landing.profile.drinkhistory.DrinkHistoryActivity"
            android:exported="true"
            android:label="Drink History"/>
        <activity
            android:name=".app.landing.profile.editprofile.EditProfileActivity"
            android:exported="true"
            android:label="@string/edit_profile"/>
        <activity
            android:name=".PlankActivity"
            android:exported="true" />
        <activity
            android:name=".SquatActivity"
            android:exported="true" />
        <activity
            android:name=".app.register.RegisterActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".app.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".app.landing.HomeActivity"
            android:exported="true"
            android:label="@string/title_home" />
        <activity
            android:name=".app.splash.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>